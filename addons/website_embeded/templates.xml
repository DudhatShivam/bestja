<openerp>
    <data>
        <template id="list">
            <t t-call="website.layout">
                <ul>
                    <li t-foreach="objects['biuletyn']" t-as="object">
                        <a t-attf-href="/embeded/{{ slug(object) }}">
                            <t t-esc="object.name"/>
                            <img t-att-src="object.thumbnail_url" t-att-alt="object.name"/>
                        </a>
                        <hr/>
                    </li>
                </ul>
            </t>
        </template>
        <template id="detail">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 t-field="object.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            <t t-raw="object.embed_code"/>
                            <p t-field="object.description"/>
                        </div>
                    </div>
                </div>

            </t>
        </template>
    </data>
</openerp>
