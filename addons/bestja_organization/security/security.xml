<openerp>
    <data>
        <record id="bestja_instance_admin" model="res.groups">
            <field name="name">BestJa Admin Instancji</field>
        </record>
        <record id="confirmation_of_organization" model="ir.rule">
            <field name="model_id" ref="model_organization"/>
            <field name="groups" eval="[(4, ref('bestja_organization.bestja_instance_admin'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">
                [(user.id,'in',[bestja_instance_admin])]
            </field>
        </record>

    </data>
</openerp>
