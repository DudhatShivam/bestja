<openerp>
    <data>
        <record model="ir.actions.act_window" id="action_organization">
            <field name="name">Organizacje</field>
            <field name="res_model">organization</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('active', '=?', False)]</field>
        </record>

        <record model="ir.ui.view" id="bestja_org_form">
            <field name="name">bestja.organization.form</field>
            <field name="model">organization</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <span class="oe_grey oe_edit_only">Wypełnij dane organizacji i dodaj zdjęcie.</span>
                    <field name="image" widget="image" class="oe_left"/>
                    </div>
                    <group>
                        <field name="krs" class="oe_inline"/>
                        <field name="nip" class="oe_inline"/>
                        <field name="regon" class="oe_inline"/>>
                        <field name="name" class="oe_inline"/>
                        <field name="street_address" class="oe_inline"/>
                        <field name="street_number" class="oe_inline"/>
                        <field name="postal_code" class="oe_inline"/>
                        <field name="city_address" class="oe_inline"/>
                        <field name="parent" class="oe_inline"/>
                    </group>
                    <hr/>
                    <group>
                        <field name="email" class="oe_inline"/>o
                        <field name="www" class="oe_inline"/>
                        <field name="fbfanpage" class="oe_inline"/>
                        <field name="phone" class="oe_inline"/>

                    </group>
                    <hr/>
                    <group>
                        <field name="coordinator" groups="bestja_base.bestja_instance_admin"/>
                        <field name="active" groups="bestja_base.bestja_instance_admin"/>
                    </group>
                    <notebook colspan="2">
                        <page string="Opis Organizacji">
                        <span class="oe_grey oe_edit_only">Opisz czym zajmuje się Twoja organizacja.</span>
                         <field name="organization_description">organization.organization_description</field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="bestja_organization_tree">
            <field name="name">bestja.organization.tree</field>
            <field name="model">organization</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="coordinator"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
